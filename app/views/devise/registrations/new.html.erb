<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="d-flex flex-fill bg-primary justify-content-between align-items-center text-light p-2">
    <div><%= link_to "\<", :back, class:"btn text-light btn-sm" %></div>
    <div>REGISTER</div>
    <div>
      <%= f.submit "Next", class:"btn text-light btn-sm" %>
    </div>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container d-flex flex-column gap-0 pt-3 ">
    <div class="field p-2">
      <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", required: true, placeholder: :full_name, class: 'form-control border-0 border-bottom rounded-0' %>
    </div>
    <div class="field p-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: :email, class: 'form-control border-0 border-bottom rounded-0' %>
    </div>
    <div class="field p-2">
      <%= f.password_field :password, autocomplete: "new-password", required: true, placeholder: :password, class: 'form-control border-0 border-bottom rounded-0' %>
    </div>
    <div class="field p-2">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, placeholder: :password_confirmation, class: 'form-control border-0 border-bottom rounded-0' %>
    </div>
  </div>
<% end %>
<%#= render "devise/shared/links" %>

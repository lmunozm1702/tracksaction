<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="d-flex flex-fill bg-primary justify-content-between align-items-center text-light p-2">
    <div><%= link_to "\<", :back, class:"btn text-light btn-sm" %></div>
    <div>PASSWORD RESET</div>
    <div>
      <%= f.submit "Reset", class:"btn text-light btn-sm" %>
    </div>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field p-2">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: :email, class: 'form-control border-0 border-bottom rounded-0' %>
  </div>
<% end %>

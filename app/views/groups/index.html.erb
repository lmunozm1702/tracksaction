<div class="d-flex flex-fill bg-primary justify-content-center align-items-center text-light p-2">
  <div class="text-center flex-grow-1">CATEGORIES</div>
  <div class="text-center">
    <small><%= link_to "New", new_group_path, class: 'text-decoration-none text-white' %></small>
  </div>
</div>
<div id="groups">
  <% @groups.each do |group| %>
    <%= link_to(group, class:"text-decoration-none") do %>
      <div class="m-3 bg-white d-flex gap-3 p-2" id="<%= dom_id group %>">
        <div>
          <%= image_tag group.icon, size: '50x50' %>
        </div>
        <div class="text-muted flex-grow-1">
          <small class="text-decoration-none"><%= group.name %></small>
        </div>
        <div class="text-black fw-bold">
          <%= number_to_currency(group.payments.sum(:amount)) %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

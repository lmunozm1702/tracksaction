<%= form_with(model: payment) do |form| %>
  <% if payment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>
      <ul>
        <% payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, required: true %>
  </div>
  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount, required: true %>
  </div>
  <% if params[:format] %>
    <%= hidden_field_tag 'group_id[]', params[:format] %>
  <% else %>
    <div>
      <%= form.label 'group_id', class: "form-label" %>
      <%= select_tag 'group_id[]', options_from_collection_for_select(User.find(current_user.id).groups, :id, :name), class: "form-select", multiple: true %>
    </div>
  <% end%>
  <div>
    <%= form.submit %>
  </div>
<% end %>
